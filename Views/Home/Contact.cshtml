@model PersonalSiteRevamped.Models.ContactViewModel
@*
    This is a model declaration. Each View can only have ONE model tied to it.
    //This statement ensures this View knows how to display and send information
    using the provided model.
*@

@{
    ViewData["Title"] = "Contact";
}



<!-- ======= Main ======= -->
<main id="main">




    <!-- ======= Contact Section ======= -->
    <section class="contact py-5 bg-dark" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container px-5">


            <h1 class="fw-bolder text-center">Contact Me!</h1>
            <p class="lead text-dark mb-0">If you'd like to get in touch, please send me a message below and I will respond as quickly as I can!</p>


            @if (ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                </div>
            }
            <div class="col-md-8 mx-auto">

                <div class="my-5 text-center text-xl-start">



                <form asp-action="Contact" class="php-email-form ">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                            <div class="col-md-6 form-group">
                                <input asp-for="Name" class="form-control" name="name" id="name" placeholder="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input asp-for="Email" class="form-control" name="email" id="email" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Subject" class="form-control" name="subject" id="subject" placeholder="Subject" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="Message" class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-4 me-sm-3">Send Message</button>
                    </div>
                </form>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
